<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#DDB8B8"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/itemName"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="Item name"
        android:inputType="textPersonName"
        android:textColorHint="#8F7F7F"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/itemWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:hint="Weight"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:textColorHint="#8F7F7F"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/itemRate"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:hint="Rate"
        android:inputType="numberDecimal"
        android:textColorHint="#8F7F7F"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
        <EditText
            android:id="@+id/nangCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight=".4"
            android:background="@color/white"
            android:hint=" Nang(d:1)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColorHint="#8F7F7F"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" X"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_weight=".1">
        </TextView>
        <EditText
            android:id="@+id/chungi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight=".4"
            android:background="@color/white"
            android:hint="Chungi(d:5)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColorHint="#8F7F7F"
            android:textStyle="bold" />
    </LinearLayout>
    <EditText
        android:id="@+id/tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:hint="Tax (default tax 0%)"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColorHint="#8F7F7F"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:layout_weight="1"
            android:text="CANCEL" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAVE" />
    </LinearLayout>

</LinearLayout>